<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/styles/custom.css" />
    <title>Returning User</title>
  </head>

  <body>
    <div class="container">
      <section>
        <div class="or-text">SAVE WITHOUT PURCHASE</div>
        <div id="vault-info-section" style="display: none;">
          <div class="separator"></div>
          <div id="vault-setup-info"></div>
          <div id="vault-setup-status"></div>
        </div>
        <div id="payment-source-section" style="display: none;">
          <div class="separator"></div>
          <div id="payment-source-type-info"></div>
          <div id="customer-id-info"></div>
          <div id="card-verification-status-info"></div>
          <div id="card-verification-auth-info"></div>
          <div id="card-verification-processor-info"></div>
          <div id="card-verification-cvv-info"></div>
          <div id="card-verification-avs-info"></div>
        </div>
        <div id="vault-testing-section" style="display: none;">
          <div class="separator"></div>
          <div class="or-text">TEST VAULT_ID ORDER CREATION</div>
          <div>
            <label for="vault-id-input">Vault ID:</label>
            <input type="text" id="vault-id-input" placeholder="Enter vault_id" style="width: 300px; margin: 10px 0;">
          </div>
          <div>
            <label for="amount-input">Amount:</label>
            <input type="number" id="amount-input" value="10.00" step="0.01" style="width: 100px; margin: 10px 0;">
          </div>
          <button id="test-vault-order-button" type="button" style="margin: 10px 0;">Create & Capture Order with Vault ID</button>
          <div id="vault-order-result" style="margin: 10px 0; padding: 10px; background: #f0f0f0; display: none;"></div>
        </div>
        <div class="separator"></div>
        <div id="paypal-button-container" class="paypal-button-container"></div>
        <div class="or-text">OR SAVE WITH APPLE PAY</div>
        <div class="separator"></div>
        <div id="applepay-container" class="paypal-button-container"></div>
        <div class="or-text">OR SAVE NEW CARD</div>
        <div class="separator"></div>
        <div class="card-fields">
          <div id="card-name-field-container"></div>
          <div id="card-number-field-container"></div>
          <div id="card-expiry-field-container"></div>
          <div id="card-cvv-field-container"></div>
          <button id="multi-card-field-button" type="button">Save Card</button>
        </div>
      </section>
      <div id="paypal-buttons-container"></div>
    </div>
    <script>
      const clientId = '<%= clientId %>';
    </script>
    <script src="/save-wo-purchase.js"></script>
  </body>
</html>